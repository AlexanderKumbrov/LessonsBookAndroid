<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context="com.example.alex.myapplication.CheatActivity"
    android:background="@drawable/backquiz">

    <TextView android:id="@+id/warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#2C3A47"
        android:text="@string/warning_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer_text_view"
        android:padding="24dp"
        android:textSize="18dp"
        android:layout_above="@+id/warning"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/show_answer_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="166dp"
        android:text="@string/show_answer_button"
        android:background="#E64CAF50"/>

</RelativeLayout>